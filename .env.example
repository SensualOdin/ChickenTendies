# ======================
# Supabase Configuration
# ======================
# Client-side (prefix with VITE_ so Vite exposes them)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# Server-side only (NEVER expose to client)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:password@db.your-project.supabase.co:5432/postgres

# ======================
# Backend API URL (for frontend in production)
# ======================
VITE_API_URL=https://api.chickentinders.app

# Frontend URL (for CORS on the server)
FRONTEND_URL=https://chickentinders.app

# ======================
# Push Notifications (VAPID)
# ======================
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key

# ======================
# Restaurant APIs
# ======================
YELP_API_KEY=your-yelp-key
GOOGLE_PLACES_API_KEY=your-google-key

# ======================
# Server
# ======================
PORT=5000
NODE_ENV=development
COOKIE_SECRET=your-random-cookie-secret
